@misc{Ettarh.02.07.2014,
 abstract = {Die Bibliothekarin Fobazi Ettarh von der Rutgers University (State University of New Jersey), setzt sich mit einem aktuellen Trendthema im Bibliothekswesen auseinander: "diversity". Beim Begriff "Diversität" wird häufig nur über unterrepräsentierte Gruppen diskutiert. Ettarh möchte dabei auf die Intersektionalität hinweisen und intersektionale Aspekte mit der Leserschaft vertiefen, um die Komplexität von "diversity" zu verdeutlichen. Die Sichtbarmachung von Intersektionalität, kann einen effektiven Umgang gegen Ungleichheiten im Bibliothekswesen bilden. Sie beschreibt Intersektionalität am Beispiel der Unterrepräsentation von Frauen, in technischen Bereichen der Bibliotheken. Als Ursache für die fehlende Repräsentation wird Sexismus aufgeführt, allerdings, so Ettarh, wird bei diesen Diskussionen nicht mit verhandelt welchen unterschiedlichen -ismen Queere - Frauen, Trans - Frauen und BIPoC - Frauen ausgesetzt sind. Ihre Erfahrungen könnten sich von denen anderer Frauen unterscheiden. Deshalb ist es von Bedeutung, nicht nur anhand einer bestimmten Gruppe zu analysieren welchen Unterdrückungsmechanismen diese ausgesetzt sind, sondern anhand von unterschiedlichen Identitäten. Bereitgestellte Bibliotheksmaterialien, um beispielsweise LGBTQ Themen sichtbar zu machen, sollten dafür nicht nur im "Pride Month" Platz finden. So wird suggeriert das diese Themen nur saisonal geschätzt werden und keine ernsthafte Integration in die Dominate Kultur unternommen wird.},
 author = {Ettarh, Fobazi},
 year = {02.07.2014},
 title = {Making a new Table: Intersectional Librarianship},
 url = {http://www.inthelibrarywiththeleadpipe.org/2014/making-a-new-table-intersectional-librarianship-3/},
